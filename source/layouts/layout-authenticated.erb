<% wrap_layout :layout do %>

    <header id="header">

        <a href="/"><img src="img/mx3-logo.png" class="logo" alt="mx3"></a>

        <nav class="main-nav">
            <ul>
                <li class="active"><a href="#">Bands<b class="caret"></b></a></li>
                <li><a href="#">Concerts</a></li>
                <li><a href="#">Supporters</a></li>
                <li>
                    <form class="form-search compact-search">
                        <input id="" type="text" class="search-input" placeholder="Find artists, songs, playlists…">
                        <a href="#" class="search-toggle"><i class="icon-search"></i></a>
                    </form>
                </li>
            </ul>
        </nav>

        <div class="player">
            <div class="player-song">
                <div class="btn-play btn-play-medium on-pause">
                    <i class="icon-pause"></i>
                </div>
                <img class="player-song-cover" src="img/fake-content/track-cover3.jpg" width="68" height="68" alt="cover">
                <!--
                <div class="player-song-name"><a href="#">Song Title</a></div>
                <div class="player-song-artist"><a href="#">Artist</a></div>
                -->
                <div class="player-song-timeline">
                    <div class="player-song-timeline-pct"></div>
                </div>
            </div>
            <div class="player-actions">
                <a href="#" class="player-playlist-toggle icon-volume"></a>
                <a href="#" class="player-playlist-toggle icon-heart-empty"></a>
                <a href="#" class="player-playlist-toggle icon-resize-full"></a>
            </div>
        </div>

        <div class="user-menu dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                <span class="user-name">Gaël Zoppi</span>
                <img src="img/fake-content/user-avatar.png" class="user-avatar" width="40" height="40" alt="">
                <b class="caret"></b>
            </a>
            <ul class="dropdown-menu" role="menu" aria-labelledby="dLabel">
                <li><a href=""><i class="icon-user"></i> Your profile</a></li>
                <li><a href=""><i class="icon-music"></i> Your music</a></li>
                <li><a href=""><i class="icon-list"></i> Your playlists</a></li>
                <li><a href=""><i class="icon-calendar"></i> Your concerts</a></li>
                <li><a href=""><i class="icon-heart"></i> Your favorites</a></li>
                <li><a href=""><i class="icon-cog"></i> Settings</a></li>
                <li class="divider"></li>
                <li><a href=""><i class="icon-logout"></i> Sign out</a></li>
            </ul>
        </div>

        <a href="#" class="btn btn-primary btn-upload">Upload a track</a>

    </header>

    <div id="content">
        <div class="oblique"></div>
        <%= yield %>
    </div>

<% end %>
